{
  "conversation-logger": {
    "name": "conversation-logger",
    "hooks": {
      "agent_start": [
        {
          "command": "$HOME/.pigo/scripts/log-conversation.sh",
          "blocking": false
        }
      ],
      "turn_start": [
        {
          "command": "$HOME/.pigo/scripts/log-conversation.sh",
          "blocking": false
        }
      ],
      "turn_end": [
        {
          "command": "$HOME/.pigo/scripts/log-conversation.sh",
          "blocking": false
        }
      ],
      "tool_start": [
        {
          "command": "$HOME/.pigo/scripts/log-conversation.sh",
          "blocking": false
        }
      ],
      "tool_end": [
        {
          "command": "$HOME/.pigo/scripts/log-conversation.sh",
          "blocking": false
        }
      ]
    }
  }
}
